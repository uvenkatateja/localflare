{
  "name": "localflare-server",
  "version": "0.1.1",
  "description": "Dashboard API server for LocalFlare",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "localflare-core": "workspace:*",
    "hono": "^4.6.14",
    "@hono/node-server": "^1.13.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "dashboard",
    "api"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohanprasadofficial/localflare",
    "directory": "packages/server"
  },
  "homepage": "https://github.com/rohanprasadofficial/localflare#readme",
  "publishConfig": {
    "access": "public"
  }
}
